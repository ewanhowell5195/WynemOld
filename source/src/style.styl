@font-face
	font-family: AlteDin
	src: url("../assets/fonts/din1451alt.ttf")

:root
	color-scheme: dark

scrollbars()
	&::-webkit-scrollbar
		width: 10px
		height: 10px

	&::-webkit-scrollbar-corner
		background-color: var(--background-color)

	&::-webkit-scrollbar-thumb
		background-color: var(--wynem-hover-color)

		&:hover
			background-color: var(--wynem-color)

			&:active
				background-color: var(--wynem-hover-color)

body
	--background-color: #1F1F21
	--sidebar-color: #0F0F10
	--dark-color: #171717
	--wynem-color: #6C80F6
	--wynem-hover-color: #87B5F9
	--wynem-active-color: mix(#6C80F6, #87B5F9, 50%)
	--wynem-select-color: #334DE3
	--shadow-color: #00000050
	--font-color: #FFF
	--drop-menu-color: #00000070
	--font-code: Consolas, monospace
	--color-axis-x: #ff1242
	--color-axis-y: #23d400
	--color-axis-z: #0894ed

	margin: 0
	background-color: var(--background-color)
	padding-top: 48px
	color: var(--font-color)
	font-family: AlteDin
	min-height: 100vh
	box-sizing: border-box
	position: relative
	
	scrollbars()

div
	scrollbars()

button
	cursor: pointer

.banner
	position: fixed
	left: 0
	top: 0
	width: 100%
	height: 60px
	background-color: var(--wynem-color)
	display: flex
	align-items: center
	z-index: 999
	box-shadow: 0 10px 10px var(--shadow-color)
	user-select: none

.bannerButton
	height: 60px
	padding: 0 16px
	display: flex
	align-items: center
	font-size: 25px
	text-shadow: 1.5px 2px var(--background-color)
	color: var(--font-color)
	white-space: pre
	text-decoration: none
	transition: box-shadow 200ms ease-in-out, color 200ms ease-in-out

	&:hover
		box-shadow: 0 0 40px 40px var(--wynem-hover-color) inset
	
	&:active
		box-shadow: 0 0 40px 40px var(--wynem-active-color) inset

	&.selected
		box-shadow: 0 0 40px 40px var(--wynem-select-color) inset
		cursor: default

.bannerLogo
	display: flex
	align-items: center
	
	svg
		background-color: var(--background-color)
		width: 48px
		height: 48px
		fill: black

	@media screen and (min-width: 590px)
		&::after
			padding-left: 10px
			content: "Wynem"
			margin-left: 8px

.bannerLogoLink
	@extend .bannerButton
	padding-left: 5px

.bannerDrop
	@extend .bannerButton
	position: relative
	outline: none
	padding: 0 30px
	display: flex
	justify-content: center
	
	&:after
		font-size: 0.8em
		content: ""
		border-left: 10px solid white
		border-top: 5px solid transparent
		border-bottom: 5px solid transparent
		filter: drop-shadow(1.5px 2px 0 #00000090)
		transform: rotate(0deg)
		transition: transform 250ms, filter 250ms

	.menu
		display: none
		position: absolute
		top: 100%
		left: 50%
		transform: translateX(-50%)
		background-color: var(--drop-menu-color)
		box-shadow: 0 10px 10px var(--shadow-color)
		flex-direction: column
		backdrop-filter: blur(5px)
		
		&:hover, ^[0]:hover ^[1..-1], &.touch-open
			display: flex
			
		&>*
			display: flex
			align-items: center
			justify-content: center
			padding: 10px 20px
			position: relative
			
			&:hover
				background-color: var(--wynem-hover-color)

			&:not(:first-child)
				margin-top: 1px

				&::after
					content: ""
					position: absolute
					left: 10px
					right: 10px
					top: -1px
					height: 1px
					background-color: var(--font-color)

	&:hover
		background-color: var(--wynem-hover-color)

		&:after
			transform: rotate(90deg)
			filter: drop-shadow(2px -1.5px 0 #00000090)

.footer
	width: 100%
	height: 40px
	background-color: var(--wynem-color)
	display: flex
	align-items: center
	padding: 0 20px
	box-sizing: border-box
	position: absolute
	bottom: 0
	text-shadow: 1.5px 2px var(--background-color)
	gap: 30px
	
	a
		text-decoration: none
		color: var(--font-color)

.filler
	flex: 1
	
.row
	display: flex

.header
	font-size: 1vh

.titleBox
	padding: 10em 5vw
	display: inline-flex
	align-items: center
	flex-direction: column

.wynem
	font-size: 10em
	user-select: none

.wynemSubtitle
	font-size: 3em
	white-space: nowrap
	
.logoBox
	padding: 8em 10vw 0 0vw
	display: inline-flex
	align-items: center
	flex-direction: column
	
.logo
	width: 15em

#home .pageContent
	display: flex
	flex-direction: column
	align-items: center
	padding-bottom: 108px
	
	.row
		width: 900px
		align-items: center
		
		img
			margin-right: 80px
		
		&:not(:last-child) img
			padding-bottom: 8px
			border-bottom: 4px solid var(--wynem-color)
		
.hidden
	display: none

.scaler
	font-size: 1em

a
	font-family: AlteDin
	color: var(--font-color)
	font-size: 20px
	line-height: 30px
	text-decoration: none

/* Misc */

#text-copier
	position: fixed
	top: -100vh

/* Commands */

#commands .pageContent
	display: flex
	min-height: calc(100vh - 100px)
	align-items: stretch
	padding-top: 12px

#commands-sidebar
	width: 280px
	background-color: var(--sidebar-color)
	user-select: none
	box-shadow: -5px 0 10px var(--shadow-color) inset
	
#category-name
	padding: 20px
	text-align: center
	text-transform: capitalize
	max-width: 100%
	display: flex
	height: 58px
	align-items: center
	overflow: hidden
	position: relative
	
	&::after
		content: ""
		position: absolute
		width: calc(100% - 40px)
		height: 1px
		top: calc(100% - 1px)
		left: 20px
		background-color: #fff

.category-back-button
	fill: #fff
	padding-right: 10px
	display: flex
	align-items: center
	cursor: pointer
	
	svg
		width: 32px
		height: 32px
		transition: transform 150ms
		
	&:hover>svg
		transform: translateX(-6px)

#categories
	padding-top: 20px
	overflow-y: auto
	max-height: calc(100vh - 219px)

.category-button
	padding: 10px 30px
	text-transform: capitalize
	font-size: 22px
	cursor: pointer
	transition: padding-left 150ms
	
	&:hover
		padding-left: 40px

#commands-main
	flex: 1
	overflow: hidden

#category-path
	height: 60px
	background-color: var(--dark-color)
	display: flex
	align-items: stretch
	padding: 0 40px
	margin: 0 -20px
	box-shadow: 0 10px 10px var(--shadow-color)

.category-path-stage
	display: flex
	align-items: stretch
	text-transform: capitalize
	font-size: 22px
	cursor: pointer
	
	&:not(:last-child)::after
		content: ">"
		padding: 17px 20px
		cursor: default
		
	div
		display: flex
		align-items: center
		transition: padding-bottom 150ms
		
		&:hover
			padding-bottom: 10px

#commandlist
	overflow-y: auto
	height: calc(100vh - 160px)
	max-height: calc(100vh - 160px)
	min-height: calc(100vh - 160px)
	padding: 40px
	box-sizing: border-box

.command
	padding: 0 0 20px 20px

.command-title
	padding: 5px 20px
	background-color: #2D2E31
	box-shadow: 0 5px 5px var(--shadow-color)
	display: flex
	align-items: center
	
	a
		font-size: 30px
		
@keyframes fade-in-out
	0%
		opacity: 0
		transform: translateY(10px)
		
	25%
		opacity: 1
		transform: translateY(0px)
		
	75%
		opacity: 1
		transform: translateY(0px)
		
	100%
		opacity: 0
		transform: translateY(-10px)

.command-copied
	padding-left: 20px
	opacity: 0
	animation: fade-in-out 1000ms 1
	user-select: none

.command-contents
	padding: 5px 20px 10px
	
.command-content-heading
	padding: 30px 0 5px 0
	font-size:  20px
	
.command-content-field
	white-space: pre-wrap
	padding-left: 10px
	
.command-content-formatting
	font-family: var(--font-code)
	background-color: var(--dark-color)
	padding: 3px 5px
	display: inline-block

.category-heading
	padding: 5px 20px
	font-size: 30px
	background-color: var(--wynem-color)
	box-shadow: 0 5px 5px var(--shadow-color)
	margin-bottom: 20px

.category-description
	white-space: pre-wrap
	padding: 0 0 40px 20px

.commands-logo-container
	width: 100%
	height: 100%
	display: flex
	align-items: stretch
	justify-content: center
	box-sizing: border-box
	padding: 200px

	svg
		width: 100%
		height: 100%
		filter: drop-shadow(0 0 10px var(--shadow-color))

		.blue
			fill: #2D2E31 !important

		.white
			fill: #2D2E31 !important

/* Privacy */

#privacy .pageContent
	width: calc(100%-200px)
	padding-left: 100px
	padding-right: 100px
	padding-bottom: 100px

/* CEM */

#cem .pageContent
	display: flex
	padding: 76px 64px 104px 64px

#entityListBox
	background-color: var(--sidebar-color)
	flex: 1

	.categoryEntities
		flex-wrap: wrap
		display: flex
		user-select: none
		padding: 5px
		align-content: flex-start
		
	h1
		text-transform: capitalize
		margin: 5px 10px
	
.entityBox
	flex: 1
	display: flex
	justify-content: center
	background-color: var(--background-color)
	width: 116px
	height: 66px
	padding: 2px 2px 20px 2px
	border: 2px solid transparent
	margin: 2px
	position: relative
	text-transform: capitalize
	cursor: pointer
		
	&.selected
		background-color: #FFFFFF40
		border: 2px solid var(--wynem-active-color)

	&:hover
		background-color: var(--wynem-color)
		
		&.selected
			background-color: var(--wynem-hover-color)

	label
		position: absolute
		bottom: 0
		left: 0
		right: 0
		text-align: center

.stickyEntityBox
	position: sticky
	top: 60px
	overflow-y: auto
	max-height: calc(100vh - 80px)
	display: flex
	flex-direction: column

#boneListBox
	padding: 5px 5px 5px 0
	width: 300px
	background-color: var(--sidebar-color)
	
	h1
		text-transform: capitalize
		margin: 10px 0
		
	button
		align-self: center
		margin-top: 10px
		border: none
		outline: none
		background-color: var(--wynem-color)
		width: 98%
		height: 40px
		min-height: 40px
		color: var(--font-color)
		
		transition: box-shadow 200ms ease-in-out, color 200ms ease-in-out

		&:hover
			box-shadow: 0 0 40px 40px var(--wynem-hover-color) inset
		
		&:active
			box-shadow: 0 0 40px 40px var(--wynem-select-color) inset

.entityBones th
	text-align: left

.entityBones td
	font-family: var(--font-code)

.entityTexture
	width: 100%
	image-rendering: -moz-crisp-edges
	image-rendering: -webkit-optimize-contrast
	image-rendering: pixelated
	background-image: url(../assets/images/backgrounds/checkerboard.png)
	display: block

.entityTextureCycle
	height: 300px
	display: flex
	align-items: center

.entityTextureWrapper
	width: 100%
	image-rendering: -moz-crisp-edges
	image-rendering: -webkit-optimize-contrast
	image-rendering: pixelated
	box-sizing: border-box
	border-width: 10px
	border-style: solid
	border-image: url(../assets/images/borders/border1.png) 3

#entitySearch
	background-color: var(--background-color)
	display: inline-flex
	align-items: center
	width: 100%
	height: 45px
	
	div
		position: relative
		margin-right: 7px
		margin-left: 8px
		cursor: pointer
		
		svg
			width: 30px
			height: 30px
			fill: white
		
		&::after
			content: ""
			position: absolute
			top: 3px
			bottom: 3px
			right: -7px
			width: 1px
			background-color: #FFFF
	
	input
		background-color: transparent
		border: none
		outline: none
		padding: 10px 10px
		font-size: 25px
		font-family: inherit
		flex: 1
		min-width: 0

/* CEM Animation Doc */

#cem_animation_doc .pageContent
	padding: 39px 64px 104px 64px
	user-select: none
	background-color: var(--sidebar-color)

#cem_doc
	padding: 16px
	background-color: var(--background-color)

	>div
		display: none
		
	>div.selected
		display: block
		
	*
		white-space: pre-wrap
	
	h2
		font-size: 25px
		
	>div>:first-child
		margin-top: -8px
		
	h2:not(:first-child)
		padding-top: 16px
		
	td:not(:last-child)
		padding-right: 16px
		
	code, pre
		background-color: var(--dark-color)
		padding: 2px 4px 4px 4px
		border: 1px solid var(--sidebar-color)
		user-select: text
		cursor: text
		font-family: var(--font-code)

	pre
		margin-bottom: 16px
		
	img
		margin: 8px
		box-shadow: 0 3px 10px var(--shadow-color)

#cem_doc_tabs
	background-color: var(--sidebar-color)
	display: flex
	gap: 2px
	border-bottom: 4px solid var(--background-color)

	>div
		padding: 8px 16px
		cursor: pointer
		border-top: 2px solid transparent
		background-color: var(--dark-color)

	>div.selected
		background-color: var(--background-color)
		border-top-color: var(--wynem-color)
		cursor: default

.cem_doc_table_list td:first-child
	font-weight: 600
	white-space: nowrap!important
	display: list-item
	list-style: inside
	font-family: var(--font-code)

.cem_doc_tab_link
	text-decoration: underline
	cursor: pointer
	color: var(--wynem-color)

/* Media */

@media only screen and (max-height: 300px)
	.header
		font-size: 3px
		
@media only screen and (max-width: 1300px)
	.scaler
		font-size: 0.8em

	#home .pageContent .row
		width: 69.2vw
		
		img
			width: 30.8vw
			margin-right: 6.2vw

@media only screen and (max-width: 800px)
	.scaler
		font-size: 0.6em
	
@media only screen and (min-height: 1500px)
	.header
		font-size: 15px